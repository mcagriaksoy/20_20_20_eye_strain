{
  "manifest_version": 3,
  "name": "20-20-20 Eye Strain Reminder",
  "short_name": "Eye Reminder",
  "version": "1.0.4",
  "description": "Reminds you to take a break every 20 minutes for your eyes using the 20-20-20 rule.",
  "author": "mcagriaksoy",
  "homepage_url": "https://github.com/mcagriaksoy",
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png",
    "256": "img/icon256.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Eye Strain Reminder",
    "default_icon": {
      "16": "img/icon16.png",
      "32": "img/icon32.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "minimum_chrome_version": "88"
}
